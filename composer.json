{
    "name": "weble/laravel-databox",
    "description": "Databox API integration for Laravel",
    "keywords": [
        "Weble",
        "laravel",
        "laravel-databox"
    ],
    "homepage": "https://github.com/weble/laravel-databox",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniele Rosario",
            "email": "daniele@weble.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.13.0",
        "illuminate/contracts": "^9.0 || ^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "guzzlehttp/guzzle": "^7.2",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Weble\\LaravelDatabox\\": "src",
            "Weble\\LaravelDatabox\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Weble\\LaravelDatabox\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Weble\\LaravelDatabox\\LaravelDataboxServiceProvider"
            ],
            "aliases": {
                "LaravelDatabox": "DataBox"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
